<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studdybuddy">

    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".session.SessionActivity"
            android:label="SessionStart"
            android:theme="@style/AppTheme"
            android:launchMode="singleTop">
            <!-- singleTop ensures that when we open the pause notif that it reopens the same "session"
                 instead of spawning a new task
                 the tradeoff is that we override onNewIntent to respond to new incoming intents -->
            <intent-filter>
                <action android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest>
